<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pamproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CurrencyDetails" android:label="@string/details"/>
        <activity android:name=".CurrencyEdit" android:label="@string/edit"/>
        <activity android:name=".CurrencyList" android:label="@string/currencies"/>
        <activity android:name=".CurrencyCalculatorResult" android:label="@string/calculator"/>
        <activity android:name=".CurrencyCalculator" android:label="@string/calculator"/>
        <activity android:name=".MainActivity" android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>